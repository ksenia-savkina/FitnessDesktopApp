<GridPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Controllers.MainController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" percentHeight="25.0"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES" percentHeight="25.0"/>
    </rowConstraints>


    <Button fx:id="button" onAction="#onStatusesClick" stylesheets="@styles.css" text="Статусы" GridPane.columnIndex="1"
            GridPane.rowIndex="1"/>
    <Button onAction="#onTrainersClick" stylesheets="@styles.css" text="Тренеры" GridPane.columnIndex="1"
            GridPane.rowIndex="2"/>
    <Button onAction="#onClassesClick" stylesheets="@styles.css" text="Групповые занятия" GridPane.columnIndex="1"
            GridPane.rowIndex="3"/>
    <Button onAction="#onClientsClick" stylesheets="@styles.css" text="Клиенты" GridPane.columnIndex="1"
            GridPane.rowIndex="4"/>


    <ImageView GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="6" GridPane.valignment="CENTER">
